{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "typings",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
